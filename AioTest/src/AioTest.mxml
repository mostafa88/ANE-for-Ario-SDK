<?xml version="1.0" encoding="utf-8"?>
<s:WindowedApplication xmlns:fx="http://ns.adobe.com/mxml/2009" 
					   xmlns:s="library://ns.adobe.com/flex/spark" 
					   xmlns:mx="library://ns.adobe.com/flex/mx"
					   title="Ario Test SDK"
					   width="350"
					   height="700"
					   initialize = "reportEvent(event)"
					   preinitialize = "reportEvent(event)"
					   creationComplete = "reportEvent(event)"
					   applicationComplete = "reportEvent(event)">
	
		<fx:Style> 
		@namespace s "library://ns.adobe.com/flex/spark"; 
		s|WindowedApplication 
		{ 
			
			skinClass:ClassReference("spark.skins.spark.SparkChromeWindowedApplicationSkin"); 
			background-color:#87ceeb; 
			background-alpha:"0.91"; 
		}          
	</fx:Style>
	
	<fx:Script>
		<![CDATA[
			import com.ario.extension.ArioInterface;
			
			import mx.events.FlexEvent;
			
			public static var nativeInstance:ArioInterface;
			
			protected function btnSynch_clickHandler(event:MouseEvent):void {
				//Alert.show("Hello World!");
				
				lblHeader.text = "clicked!"
				var result:String = nativeInstance.isSupported();
				trace(result);
				lblHeader.text = result;
			}
			protected function btnASynch_clickHandler(event:MouseEvent):void {
				//Alert.show("Hello World!");
				
				nativeInstance.isSupportedAsynch();
			}
			
			
			[Bindable]
			private var report:String = "";
			
			private function reportEvent(event:FlexEvent):void {
				switch(event.type)
				{
					case "preinitialize":
					{
						onPreInitialize();
						break;
					}
					case "initialize":
					{
						onInitialize();
						break;
					}
					case "creationComplete":
					{
						onCreateComplete();
						break;
					}
					case "applicationComplete":
					{
						onApplicationComplete();
						break;
					}
					default:
					{
						break;
					}
				}
				
			}
			private function onInitialize():void 
			{
				
			}
			private function onPreInitialize():void 
			{
			}
			private function onCreateComplete():void 
			{	
			}
			private function onApplicationComplete():void
			{
				nativeInstance = new ArioInterface();
			}
		]]>
	</fx:Script>
	
	<s:VGroup horizontalAlign = "center" width = "100%" height = "100%" 
			  paddingTop = "100" gap = "50">
		<s:Label text="Hello From Ario to Adobe AIR" horizontalCenter="0" verticalCenter="0"/> 
		<s:Label id = "lblHeader" fontSize = "40" color = "0x777777" />
		<s:TextArea id = "reportText" text = "{report}" editable = "false" 
					width = "300" height = "200">				
		</s:TextArea>			
		<s:Button label = "Synch Test!" id = "btnSynch" 
				  click = "btnSynch_clickHandler(event)" />
		<s:Button label = "Asynch Test" id = "btnAsynch" 
				  click = "btnASynch_clickHandler(event)" />
	</s:VGroup>
	
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>

</s:WindowedApplication>
